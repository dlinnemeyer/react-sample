env:
  browser: true
  es6: true
  node: true
extends:
  - eslint:recommended
parserOptions:
  ecmaFeatures:
    jsx: true
  ecmaVersion: 6
  sourceType: module
plugins:
  - import
  - react
settings:
  import/resolver: {node: {extensions: [.jsx, .js]}}
rules:
  no-alert: 2
  no-caller: 2
  no-extend-native: 2
  no-native-reassign: 2
  no-self-compare: 1
  no-unused-expressions: 1
  camelcase: 1
  comma-style: 1
  no-var: 1
  prefer-arrow-callback: 1
  prefer-const: 1
  prefer-spread: 1
  prefer-template: 1
  no-else-return: 1
  no-shadow:
    - 1
    - builtinGlobals: false
      hoist: all
  no-shadow-restricted-names: 1
  no-undefined: 1
  brace-style:
    - 1
    - stroustrup
    - allowSingleLine: true
  comma-spacing: 1
  no-array-constructor: 1
  no-nested-ternary: 1
  no-new-object: 1
  no-plusplus: 1
  prefer-rest-params: 1
  jsx-quotes: 1
  react/jsx-no-undef: 1
  react/jsx-uses-react: 1
  react/jsx-uses-vars: 1
  import/no-unresolved: 2
  import/named: 2
  import/namespace: 2
  import/default: 2
  import/export: 2
  import/no-deprecated: 1
  import/no-extraneous-dependencies: 1
  import/no-commonjs: 1
  import/no-amd: 1
  import/no-nodejs-modules: 1
  import/no-duplicates: 1
  import/extensions: 1
  import/no-namespace: 1
  semi:
    - 2
    - never
