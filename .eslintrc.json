{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
      "browser": true,
      "node": true
    },
    "rules": {
      "semi": [2, "never"],
      "jsx-quotes": 1,
      "react/jsx-no-undef": 1,
      "react/jsx-uses-react": 1,
      "react/jsx-uses-vars": 1
    },
    "extends": ["eslint:recommended", "plugin:import/errors", "plugin:import/warnings"],
    "plugins": ["import", "react"]
}
